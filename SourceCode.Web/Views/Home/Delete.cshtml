@model ClientViewModel

@{
    ViewData["Title"] = "Delete Client";
}

@*TODO create partial for this OR object in base view*@
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Client Details</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Home">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a asp-action="Index">Clients</a>
            </li>
            <li class="active breadcrumb-item">
                <strong>Client Details</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
@*END*@

<div class="wrapper wrapper-content animated fadeInRight">

    <div class="row">
        <div class="col-lg-12">

            <div class="ibox product-detail">
                <div class="ibox-content">

                    <div class="row">
                        <div class="col-md-12">

                            <h2 class="text-danger">Are you sure you want to delete this client?</h2>

                            <h2 class="font-bold m-b-xs">
                                @Html.DisplayFor(model => model.Name)
                            </h2>
                            <small>
                                @Html.DisplayFor(model => model.WebSite)
                            </small>
                            <small>
                                @Html.DisplayFor(model => model.DirectorName)
                            </small>
                            <small>
                                @Html.DisplayFor(model => model.EmailAddress)
                            </small>

                            <hr />
                            <form asp-action="Delete">
                                <input type="hidden" asp-for="Id" />
                                <input type="submit" value="Delete" class="btn btn-danger" /> |
                                <a asp-action="Index">Back to List</a>
                            </form>

                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>

</div>

